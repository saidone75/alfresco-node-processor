{
  "collector": {
    "name": "QueryNodeCollector",
    "args": {
      "query": "TYPE:'cm:folder' AND PATH:'/app:company_home/*'"
    }
  },
  "name": "MetadataNormalizationProcessor",
  "args": {
    "rules": [
      {
        "property": "cm:description",
        "trim": true,
        "collapse-whitespace": true
      },
      {
        "property": "cm:title",
        "case": "title"
      },
      {
        "property": "cm:publisher",
        "regex": [
          {
            "pattern": "\\s+",
            "replace": " "
          },
          {
            "pattern": "^saidone$",
            "replace": "Saidone"
          }
        ]
      },
      {
        "property": "cm:author",
        "copy-to": "cm:publisher"
      }
    ]
  }
}